CREATE DATABASE `BRAINPOT`;
USE `BRAINPOT`;

CREATE TABLE `PAINT` (
    `ID` INT NOT NULL UNIQUE AUTO_INCREMENT,
    `ID_IN_APP` INT NOT NULL,
    `OWNERTEAM` INT NOT NULL,
    `OWNERUSER` INT NOT NULL,
    `CONTENT` TEXT NOT NULL,
    INDEX `IDX_ID_IN_APP` (`ID_IN_APP`),
    FOREIGN KEY(`OWNERTEAM`) REFERENCES `TEAM`(`ID`) ON UPDATE CASCADE ON DELETE CASCADE
);

#데이터 입력용 쿼리문
INSERT INTO `PAINT`(`ID_IN_APP`,`OWNERTEAM`, `OWNERUSER`, `CONTENT`) VALUES (1,6, 1, '혜으리');

#데이터 조회용 쿼리문
SELECT * FROM `PAINT`;

#### DANGER!! ####
DROP TABLE `PAINT`;